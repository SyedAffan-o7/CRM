# Copy this file to .env and adjust as needed

# Production settings (for Render deployment)
# DATABASE_URL will be automatically provided by Render
# SECRET_KEY will be automatically generated by Render
DEBUG=False
ALLOWED_HOSTS=.onrender.com,127.0.0.1,localhost
DB_CONN_MAX_AGE=600
DB_SSL_REQUIRED=True

# Local development settings
# Uncomment and modify for local development:
# DATABASE_URL=postgresql://postgres:secret@localhost:5432/myapp
# DEBUG=True
# ALLOWED_HOSTS=127.0.0.1,localhost
# DB_SSL_REQUIRED=False
